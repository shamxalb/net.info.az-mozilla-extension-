{
    "name": "Detect my IP and website location",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Shows user IP data and where website is located with flags.",
    "homepage_url": "https://bayramoff.com/apps/ip-unvani-teyin-et-chrome",
    "host_permissions": [
        "https://net.info.az/*"
    ],
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
	"browser_specific_settings": {
	  "gecko": {
		"id": "netinfo@bayramoff.com"
		}
		},
	"background": {
	  "scripts": ["content.js"] 
	},
    "permissions": ["tabs", "storage"],
    "action": {
        "default_title": "net.info.az",
        "default_popup": "window.html",
        "default_icon": {
            "16": "icons/logo_16.png",
            "32": "icons/logo_32.png",
            "48": "icons/logo_48.png",
            "128": "icons/logo_128.png"
        }
    },
    "icons": {
        "16": "icons/logo_16.png",
        "32": "icons/logo_32.png",
        "48": "icons/logo_48.png",
        "128": "icons/logo_128.png"
    }
}